footer
  position relative
  display flex
  flex-direction column
  background #222
  color white
  font-size 1.5rem

  .socials
    padding 5rem 0
    height 400px
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-gap 2rem
    &__links
      grid-column-start 2
      display grid
      grid-template-rows 1fr 2fr
      justify-items center
      grid-gap 1rem
    &__twitter
      display grid
      grid-template-rows 1fr 2fr
      justify-items center
      grid-gap 1rem
    &__fb
      display grid
      grid-template-rows 1fr 2fr
      justify-items center
      grid-gap 1rem
    &__link
      grid-row 2 / span 1
      svg
        font-size 3.5rem
        color #fff
      .fa-twitter
        transition color .3s ease-in
        &:hover
          color #0084b4
      .fa-facebook
        transition color .3s ease-in
        &:hover
          color #3B5998
      .fa-youtube
        transition color .3s ease-in
        &:hover
          color #FF0000

  .contact
    background black
    padding 5rem 0
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-gap 2rem
    & > *
      padding 0 5rem
    &__about
      grid-column-start 2
      &__description
        font-size 1.6rem
        text-indent 2rem
        line-height 1.2
      &__more
        color $orange
        text-transform capitalize
        text-decoration none
        span
          padding-left 1.5rem
    &__info > h2, &__email > h2
      text-align center
      color $orange
      font-size 2rem
      text-transform uppercase
      font-weight 400
    &__info
      grid-column 2 / 4
      display grid
      grid-template-columns 1fr
      .divide
        width 100%
        height 1px
        background #4e4e4e
      p, a
        text-align center
        font-size 1.3rem
        span
          font-style italic
          // color #d8d6d6
      p
        margin 5px
      a
        color #d8d6d6
        text-decoration none
    &__email
      display grid
      grid-template-columns 1fr
      justify-content center
      justify-items center
      align-content flex-start
      .query__btn
        outline none
        color white
        background black
        border 1px white solid
        border-radius 5px
        padding 8px 6px
        margin 2rem 0
        font-size 1.2rem
        text-align center
        text-transform uppercase
        letter-spacing 1px
        transition all .5s ease
        cursor pointer
        &:hover
          background $orange

  .copyright
    font-size 1.2rem
    display grid
    grid-template-columns repeat(10, 1fr)
    p
      grid-column 3 / -1
      color $orange
      font-size 1rem
      span
        color white

@media (max-width: 1200px)
  .socials
    padding 5rem !important
    grid-template-columns repeat(3, 1fr) !important
    &__links
      grid-column-start 1 !important
  .contact
    grid-template-columns repeat(6, 1fr) !important
    &__email
      grid-column 4 / 6

@media (max-width: 800px)
  .socials
    grid-template-columns 1fr !important

  .contact
    grid-template-columns 1fr !important
