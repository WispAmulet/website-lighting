@require './_variables.styl'

footer
  position relative
  display flex
  flex-direction column
  background #222
  color white
  font-size 1.5rem
  .quote
    background #444
    text-align center
    padding 5rem 0
    p
      font-size 2rem
      line-height 1.5
      margin 0
    p.one
      font-style italic
      text-transform uppercase
      font-size 3.5rem
  .socials
    height 400px
  .contact
    background black
    padding 3rem 0
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-gap 2rem
    & > *
      padding 0 5rem
    &__about
      grid-column-start 2
      &__description
        font-size 1.6rem
        text-indent 2rem
        line-height 1.2
      &__more
        color $orange
        text-transform capitalize
        text-decoration none
        span
          padding-left 1.5rem
    &__info > h2, &__email > h2
      text-align center
      color $orange
      font-size 2rem
      text-transform uppercase
      font-weight 400
    &__info
      display grid
      grid-template-columns 1fr
      .divide
        width 100%
        height 1px
        background #4e4e4e
      p, a
        margin 5px
        text-align center
        font-size 1.3rem
        span
          font-style italic
          color #d8d6d6
      a
        color #d8d6d6
        text-decoration none
    &__email
      display grid
      grid-template-columns 1fr
      justify-content center
      justify-items center
      align-content flex-start
      .query__btn
        outline none
        color white
        background black
        border 1px white solid
        border-radius 5px
        padding 8px 6px
        margin 2rem 0
        font-size 1.2rem
        text-align center
        text-transform uppercase
        letter-spacing 1px
        transition all .5s ease
        cursor pointer
        &:hover
          background $orange
  .copyright
    font-size 1.2rem
    display grid
    grid-template-columns repeat(10, 1fr)
    p
      grid-column 3 / -1
      color $orange
      font-size 1rem
      span
        color white

@media (max-width: 1200px)
  .contact
    grid-template-columns repeat(3, 1fr) !important
    &__about
      grid-column-start 1 !important

@media (max-width: 800px)
  .contact
    grid-template-columns 1fr !important
    & > *
      display grid
      grid-template-columns 1fr 3fr 1fr !important
      justify-items center
      & > *
        grid-column-start 2
