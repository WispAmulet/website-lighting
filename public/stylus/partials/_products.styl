.product
  &-types
    margin 5rem 0
    display flex
    justify-content center
  &__link
    display grid
    grid-template-columns 1fr 2rem
    grid-gap 2rem
    font-size 1.8rem
    text-decoration none
    color #3a3a3a
    border 1px solid #d8d8d8
    padding 5px 1rem
    transition all .2s ease-out
    &:hover, &--active
      background $orange
      color white

.products
  &-container
    @extend .inner-2
    padding 5rem 0
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-gap 2rem
  h2
    grid-column 1 / -1
    // text-transform uppercase

  &__banner
    height 30rem
    background url(/images/photos/products.jpg) center 35%
    &::after
      background rgba(0, 0, 0, .5)

  .product
    background #fff
    position relative
    outline 1px solid $orange
    transition all .3s ease-in-out
    box-shadow 0 2px 5px rgba(0, 0, 0, .1)
    &:hover
      top -2px
      box-shadow 0 2px 5px rgba(0, 0, 0, .3)

    &__img
      height 25rem
      background-size cover
      background-repeat no-repeat
      background-position center center

    article
      padding 2rem
      height 30em
      display flex
      flex-direction column
      align-items center
      h2
        // color $orange
        font-size 2rem
        text-align left
      a
        font-size 1.4rem
      > :last-child
        padding 1rem 2rem
        outline 2px solid #ccc
        font-weight 700
        text-transform uppercase
        transition all .3s ease-out
        &:hover
          background $orange
          color white
          outline-color white
    &__edit
      width 3rem
    &__detail
      flex 1
      padding 3rem 0
      li
        color #808080
        font-size 1.4rem
        list-style none
        line-height 2
        text-align center
        font-style italic
      &__button
        margin-top 3rem
        a
          border 1px solid $orange
          border-radius .5rem
          color $orange
          font-size 1.4rem
          text-decoration none
          padding .5rem
          transition all .5s ease-out
          &:hover
            background $orange
            color white
    &__figure--hide
      display none

    &-gallery
      figure
        margin 0
        figcaption
          display none

@media (max-width: 800px)
  .products
    background #000
