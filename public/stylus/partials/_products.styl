.products
  @extend .inner-2
  margin-bottom 5rem
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-gap 3rem
  h2
    grid-column 1 / -1
    text-transform uppercase

  &__banner
    height 30rem
    background url(/images/photos/products.jpg) center 35%

  .product
    padding 0 2rem
    transition all .3s ease-in-out
    box-shadow 0 2px 5px rgba(0, 0, 0, .1)
    &:hover
      top -2px
      box-shadow 0 2px 5px rgba(0, 0, 0, .3)

    article
      padding 2rem 0
      height 30em
      display flex
      flex-direction column
      align-items center
      a
        font-size 1.2rem
      > :last-child
        padding 1.2rem 2.4rem
        outline 2px solid #ccc
        font-weight 700
        text-transform uppercase
        transition all .5s ease-out
        &:hover
          background $orange
          color white
          outline-color white

    &__title
      h2
        color $orange
        font-size 2rem
    &__edit
      width 3rem
    &__detail
      flex 1
      padding 3rem 0
      li
        color #808080
        font-size 1.4rem
        list-style none
        line-height 2
        text-align center
        font-style italic
      &__button
        margin-top 3rem
        a
          border 1px solid $orange
          border-radius .5rem
          color $orange
          font-size 1.4rem
          text-decoration none
          padding .5rem
          transition all .5s ease-out
          &:hover
            background $orange
            color white
    &__figure--hide
      display none

    &-gallery
      figure
        margin 0
        figcaption
          display none

@media (max-width: 800px)
  .products
    background #000
