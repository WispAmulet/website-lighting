@require './_variables.styl'

body
  position relative
  &.nav-fixed header
    position fixed
    width 100%
    top 0
    // flex-direction row
    grid-template-columns auto 1fr
    .logo
      display block
      &-s
        display none
    .nav
      justify-self flex-end
  &.rb--hide .rb__btn
    transform translateY(500%)
    opacity .5

.content
  padding 5rem 0

.inner, .inner-2
  max-width 900px
  margin 0 auto
  padding 0 5rem

.inner-2
  max-width 1200px

