.rb
  z-index 95
  position fixed
  right 3rem
  bottom 5rem
  height 16rem
  display grid
  grid-template-columns 1fr
  grid-gap 5px
  align-content flex-end
  &__btn
    background $orange
    outline none
    border none
    width 5rem
    height 5rem
    font-size 2.5rem
    color darken(white, 10%)
    cursor pointer
    transition all .5s ease-out
    opacity .7
    &:hover
      opacity 1

@media (max-width: 800px)
  body
    &.nav-fixed header
      .logo
        display none
        &-s
          display block
      .nav
        justify-self unset
  .rb
    height 10rem
    bottom 3rem
    right 1.5rem
    &__btn
      width 3rem
      height 3rem
      font-size 1.5rem
  .content
    padding 0
