@require './_variables.styl'

.content
.intro
  &__company
    padding-bottom 5rem
    h2
      color $orange
      text-transform uppercase
      text-align center
    p
      font-size 1.8rem
      line-height 1.5
      text-indent 2rem
  &__products
    background #ededed
    padding 5rem 0
    .inner-2
      display grid
      grid-template-columns repeat(4, 1fr)
      grid-gap 2rem
    > h2
      font-size 2.2rem
      color $orange
      text-align center
      display grid
      grid-template-columns 1fr auto 1fr
      grid-gap 2rem
      align-items center
      margin-bottom 5rem
      &::before, &::after
        display block
        content ''
        height 1rem
        background liner-gradient(to var(--direction, left), $orange, transparent)
      &::after
        --direction right
  &__product
    background white
    height 40rem
    padding 0 2rem
    figure
      margin 0
    .figure--hide
      display none
    figcaption
      display none
  &__projects
    height 40rem

@media (max-width: 800px)
  .intro
    &__company
      padding 2rem 0
      p
        font-size 1.6rem
        word-wrap true
    &__products
      .inner-2
        grid-template-columns 1fr
