  &__products
    background #f7ecdd
    padding 3rem 0
    .inner-2
      display grid
      grid-template-columns repeat(3, 1fr)
      grid-gap 0 3rem
      > h2, > p
        grid-column 1 / -1
        text-align left
      > h2
        margin-bottom 0
      > p
        font-size 1.4rem
      // display grid
      // grid-template-columns 1fr auto 1fr
      // grid-gap 2rem
      // align-items center
      // &::before, &::after
      //   display block
      //   content ''
      //   height 1rem
      //   background liner-gradient(to var(--direction, left), $orange, transparent)
      // &::after
      //   --direction right

  &__product
    background white
    height 65rem
    // padding 0 2rem
    // position relative
    // transition all .3s ease-in-out
    // box-shadow 0 2px 5px rgba(0, 0, 0, .1)
    // &:hover
    //   // top -2px
    //   box-shadow 0 2px 5px rgba(0, 0, 0, .3)
    &-gallery
      height 35rem
    figure
      margin 0
    .figure--hide
      display none
    figcaption
      display none
    article
      height 30rem
      padding 2rem 0
      display flex
      flex-direction column
      justify-content space-between
      align-items center
      h2
        font-size 1.8rem
        color $orange
        text-transform uppercase
        font-weight 600
      .intro__product__detail
        flex 1
      p
        font-size 1.4rem
        text-align center
        font-style italic
        color #808080
      a
        font-size 1.2rem
        font-weight 600
        text-transform uppercase
        padding 1.2rem 2.4rem
        outline 2px solid #ccc
        transition all .5s ease-out
        &:hover
          background $orange
          color white
          border-color white
  &__certificates
    background #fdf9f5
    padding 3rem 0
    h2
      text-transform uppercase
      color $orange
      font-size 2.2rem
    &__link
      text-align center
      a
        display block
      img
        width 80%

@media (max-width: 800px)
  .intro
    &__company
      padding 2rem 0
      p
        font-size 1.6rem
        word-wrap true
      &-gallery
        grid-template-columns 1fr
      &__img
        height 20rem
    &__products
      .inner-2
        grid-template-columns 1fr
