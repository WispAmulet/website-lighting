.intro
  > *
    &:not(:first-child) > h2
      font-size 2.2rem
    > h1
      font-size 3.5rem
      color #000
      margin 0
      text-transform capitalize

  &__cornlight
    background #f7ecdd
    padding 3rem 0
    // &__left, &__right
    //   grid-row 1 / -1
    .inner-2
      display grid
      grid-template-columns repeat(3, 1fr)
      grid-template-rows repeat(3, 1fr)
      grid-gap 2rem
      align-items center
      img
        border-radius 50%
      h2
        font-size 2rem
        color #666
      > :nth-child(2n)
        h2
          text-align right
        p
          text-align right
      > :nth-child(2n+1)
        h2
          text-align left
        p
          text-align left
      img
        grid-column 2 / 3
        grid-row 1 / span 3
    h1
      position relative
      // &:after
      //   content ""
      //   height 5px
      //   width 3rem
      //   background #ccc
      //   position absolute
      //   top -1px
      //   left 29px
    p
      text-align center
      color #666

  &__company
    background-color #fdf9f5
    padding 3rem 0
    p
      font-size 1.6rem
      line-height 1.5
      text-indent 2rem
    p:nth-child(2n)
      margin-top 4rem
      text-align center
      a
        font-size 1.4rem
        outline 1px $orange solid
        color #8cc640
        text-transform uppercase
        padding 1rem 2rem
        margin 0 1rem
        transition all .3s ease-in-out
        &:last-child
          background $orange
          color #fff
        &:hover
          color #fff
          background #8cc640
          outline-color #8cc640

