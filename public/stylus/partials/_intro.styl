  &__company
    max-width 90rem
    padding 0 3rem
    margin 0 auto
    &-wrapper
      padding 3rem 0
      background-color $light
    p
      font-size 1.6rem
      line-height 1.5
      text-indent 2rem
    &__button
      font-size 1.6rem
      padding 2rem 0 3rem 0
      text-align center
      a
        display inline-block
        font-size 1.4rem
        outline 1px $orange solid
        color #8cc640
        text-transform uppercase
        padding 1rem 2rem
        margin 0 1rem
        transition all .3s ease-in-out
        &:last-child
          background $orange
          color #fff
        &:hover
          color #fff
          background #8cc640
          outline-color #8cc640

  &__products
    // background rgba(240, 133, 25, .7)
    background rgba(0, 0, 0, .3)
    color #fff
    padding 3rem 0
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    &-wrapper
      background-image url('/images/photos/intro_products_bg.jpg')
      background-size cover
      background-position 50% 20%
      background-attachment fixed
      height 60rem
      position relative
    h2
      text-transform uppercase
      font-size 2rem
      margin 0
  &__product
    height 48rem
    padding 2.5rem
    display flex
    flex-direction column
    &-wrapper
      max-width 120rem
      margin 0 auto
      display grid
      grid-template-columns repeat(4, 1fr)
      grid-gap 2rem
      padding 3rem 5rem
    &__detail
      flex 1
      h2
        font-size 2rem
        font-weight 500
        letter-spacing 1px
      p
        padding 2rem
        font-size 1.4rem
        letter-spacing 1px
        line-height 1.5
    &__link
      text-align center
      a
        transition all .5s ease-out
        padding 1rem 2rem
        color #fff
        text-transform uppercase
        letter-spacing 1px
        font-weight 600
        font-size 1.2rem
        &:hover
          background $orange
        span
          padding-right 1rem

  &__certificates
    background $light
    padding 3rem 0
    h2
      text-transform uppercase
      color $orange
      font-size 2.2rem
    &__link
      text-align center
      a
        display block
      img
        width 80%

@media (max-width: 1000px)
  .intro
    &__products
      &-wrapper
        height 110rem
    &__product
      // height 52rem
      &-wrapper
        max-width 70rem
        grid-template-columns repeat(2, 1fr) !important
        grid-gap 2rem 12rem

@media (max-width: 800px)
  .intro
    &__product
      &-wrapper
        grid-gap 2rem 5rem

@media (max-width: 600px)
  .intro
    &__company
      &__button
        a
          font-size 1rem
    &__products
      &-wrapper
        height 210rem
    &__product
      &-wrapper
        max-width 40rem
        grid-template-columns 1fr !important
    &__certificates
      &__link
        img
          width 100%
