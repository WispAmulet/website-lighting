.intro
  > *
    &:not(:first-child) > h2
      font-size 2.2rem
    > h2
      color $orange
      text-transform uppercase

  &__company
    padding 5rem 0
    p
      font-size 1.8rem
      line-height 1.5
      text-indent 2rem

  &__products
    background #ededed
    padding 3rem 0
    .inner-2
      display grid
      grid-template-columns repeat(4, 1fr)
      grid-gap 2rem
    > h2
      display grid
      grid-template-columns 1fr auto 1fr
      grid-gap 2rem
      align-items center
      margin-bottom 5rem
      &::before, &::after
        display block
        content ''
        height 1rem
        background liner-gradient(to var(--direction, left), $orange, transparent)
      &::after
        --direction right

  &__product
    background white
    height 50rem
    padding 0 2rem
    // position relative
    transition all .3s ease-in-out
    box-shadow 0 2px 5px rgba(0, 0, 0, .1)
    &:hover
      // top -2px
      box-shadow 0 2px 5px rgba(0, 0, 0, .3)
    &-gallery
      height 25rem
    figure
      margin 0
    .figure--hide
      display none
    figcaption
      display none
    article
      height 25rem
      padding 2rem 0
      display flex
      flex-direction column
      justify-content space-between
      align-items center
      h2
        font-size 1.8rem
        text-transform uppercase
        font-weight 500
      .intro__product__detail
        flex 1
      p, a
        font-size 1.4rem
      a
        padding .5rem 1rem
        border 1px solid black
        transition all .5s ease-out
        &:hover
          background $orange
          color white
          border-color white

  &__projects
    height 40rem
    padding 3rem 0

@media (max-width: 800px)
  .intro
    &__company
      padding 2rem 0
      p
        font-size 1.6rem
        word-wrap true
    &__products
      .inner-2
        grid-template-columns 1fr
