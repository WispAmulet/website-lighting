header
  z-index 49
  // padding 1rem 2rem
  // background $orange
  display grid !important
  grid-template-columns 1fr
  // grid-template-rows auto 1fr
  justify-content center
  // justify-items center
  align-items center

.top
  // padding 1rem 0
  // background #fff
  // background #f5f5f5
  border-bottom 1px solid #e7e7e7
  height 10rem
  display flex
  &__left, &__right
    flex 1
    display flex
    justify-content flex-end
    align-items center
  &__right
    justify-content flex-start
  &__logo
    width 8rem
    // height 9.2rem
  &__brand
    padding 1rem
    h2
      text-transform capitalize
      text-align left
      margin-top 0
      margin-bottom 1rem
      color $orange
    p
      margin 0
      color #000
  &__tel
    display flex
    align-items center
    span
      color green
      font-size 3rem
    a
      font-size 2.5rem
  .user
    > *
      padding 0 .5rem
  .language
    padding-left 2rem
    &--active
      color $orange !important
    a
      font-size 1.2rem
    span
      color #b3b3b3
