.single
  @extend .inner-2
  display grid
  grid-template-columns 1fr 1fr
  grid-gap 2rem
  &__descriptions
    padding 1rem
    display grid
    grid-template-columns 1fr
    ol
      list-style none
      padding-left 0
      li
        font-size 1.3rem
        line-height 1.5
        font-weight 600
        letter-spacing 1px
        &::before
          content 'â€¢ '
  h2
    font-size 2rem
    text-transform uppercase
    text-align left
    font-weight 500
  &__features
    ul
      list-style none
      padding-left 0
      li
        font-size 1.3rem
        line-height 1.5
        span
          font-size 1.4rem
          text-transform uppercase
          font-weight 600
  &__brochure
    a
      display inline-block
      background $orange
      color #fff
      padding 1rem 2rem
      font-size 1.4rem
      font-weight 600

  &-gallery
    display grid
    grid-template-columns repeat(6, 1fr)
    justify-items flex-start
    align-content flex-start
    figure
      margin 0
      &:first-child
        grid-column 1 / -1

  &__table
    grid-column 1 / -1
