.single
  @extend .inner-2
  padding 5rem 0
  display grid
  grid-template-columns 1fr 1fr
  grid-gap 2rem
  &__descriptions
    padding 1rem
    display grid
    grid-template-columns 1fr
    > h2
      color $orange
      font-weight 600
      font-size 2.4rem !important
    ol
      list-style none
      padding-left 0
      li
        font-size 1.3rem
        line-height 1.5
        font-weight 600
        letter-spacing 1px
        &::before
          content 'âœ¨ '
  h2
    font-size 2rem
    text-transform uppercase
    text-align left
    font-weight 500
  p
    font-size 1.4rem
    letter-spacing 1px
  &__features
    ul
      list-style none
      padding-left 0
      li
        font-size 1.3rem
        line-height 1.5
        font-weight 600
        letter-spacing 1px
        &::before
          content 'ðŸ”¥ '
  &__brochure
    a
      display inline-block
      background $orange
      color #fff
      padding 1rem 2rem
      font-size 1.4rem
      font-weight 600

  &-gallery
    &__container
      width 40rem
      display flex
      align-items center
    // padding 0 7rem
    display grid
    grid-template-columns repeat(4, 1fr)
    grid-gap 1rem
    justify-items center
    align-content flex-start
    figure
      margin 0
      &:first-child
        grid-column 1 / -1
      img
        outline 1px solid $orange

  &__table
    grid-column 1 / -1
    display grid
    grid-template-columns 3fr 2fr
    h2
      grid-column 1 / -1
    p
      text-align center
      font-size 1.3rem
      margin 0
    &__details, &__ctn
      table
        border-collapse collapse
        width 100%
        tr
          &:first-child
            background $orange
            color #fff
            p
              font-size 1.5rem
              font-weight 700
              // text-transform uppercase
          &:nth-child(2n+2)
            background #dfdfdf
          &:nth-child(2n+3)
            background #eee
            // background #fff
          td
            padding 1rem
    &--head
      background $orange
      color #fff
      p
        font-weight 500
