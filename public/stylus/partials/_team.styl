.team
  padding 2rem 0
  display grid
  grid-template-columns repeat(auto-fit, minmax(20rem, 1fr))
  grid-gap 3rem
  &-wrapper, &-more
    max-width 1200px
    margin 0 auto
    padding 3rem 2rem
  &-more
    display flex
    flex-direction column
    align-items center
    padding-top 0

.member
  display flex
  flex-direction column
  align-items center
  &__img
    width 20rem
    height 20rem
    overflow hidden
    margin-bottom 2rem
  img
    transition all .5s ease
    &:hover
      transform scale(1.1)
  h2
    margin 0
  h3
    font-size 1.8rem
    font-weight 400
    margin 0
  &__contact
    margin 2rem 0
    // padding 2rem
    p
      text-align center
      margin 0
      line-height 1.5
