.certificate
  width 1000px
  margin 0 auto
  border 1px solid $orange
  padding 1rem
  margin-bottom 3rem
  h2
    text-align left
    display flex
    align-items center
    color $orange
    font-size 2rem
  &__edit
    width 3rem
  &-gallery
    display grid
    grid-template-columns repeat(5, minmax(100px, 1fr))
    grid-gap 2rem
    figure
      margin 0
