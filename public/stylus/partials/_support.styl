.support
  max-width 1000px
  padding 3rem 2rem
  margin 0 auto
  display grid
  grid-template-columns 1fr
  grid-gap 2rem
  &__banner
    height 30rem
    background url(/images/photos/support.jpg) center 90%
  &__qa
    h2
      text-align left
      font-size 2.2rem
      color $orange
    p
      letter-spacing 1px
      &.sample
        line-height 1.5
      a
        background $orange
        color #fff
  &__payment
    margin-bottom 4rem
    > :first-child
      font-size 1.8rem
    :first-child
      font-style italic
      font-weight bold
    > :not(:first-child)
      padding-left 3rem
    &__bank
      margin-bottom 3rem
    &__credit
      display flex
      &--l
        padding-right 3rem
      &--r
        padding 0 2rem
        border 2px solid #888
        p
          margin  0
          font-weight normal !important
          font-style normal !important
    ul
      list-style none
      display flex
      li
        font-weight normal !important
        font-style italic
        font-size 1.6rem
        padding-right 2rem

@media (max-width: 800px)
  .support
    padding 5rem 2rem
