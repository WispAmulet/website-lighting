.contact
  &-wrapper
    max-width 1000px
    margin 0 auto
    padding 5rem 0
    > h2
      font-size 2rem
      font-weight 500
      text-align left
      line-height 1.5
      margin-bottom 10rem
  &__us, &__cn
    display grid
    grid-template-columns 1fr 3fr
    grid-gap 5rem
    padding-bottom 3rem
  &__title
    // display flex
    // flex-direction column
    // align-items center
    > *
      margin 0
      line-height 1.5
      text-align left
    h2
      font-size 2.4rem
      text-transform capitalize
      color $orange
    p
      font-size 1.6rem
  &__addr
    font-style italic
