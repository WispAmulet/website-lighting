.contact
  max-width 1200px
  margin 0 auto
  padding 5rem 2rem
  > p
    // font-size 2rem
    // font-weight 500
    // text-align left
    line-height 1.5
    letter-spacing 1px
    margin-bottom 10rem
  &__area
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 2rem
  &__us, &__cn
    // display grid
    // grid-template-columns 1fr 1fr
    // grid-gap 5rem
    margin-bottom 3rem
  &__title
    padding 1rem
    margin-bottom 3rem
    // display flex
    // flex-direction column
    // justify-content center
    // align-items center
    // text-align center
    h3
      font-size 2rem
      text-transform capitalize
      text-align left
    p
      margin 0
      line-height 1.5
      font-size 1.6rem
      span
        font-style italic
        color #333
      a
        text-decoration underline !important
  &__btn
    margin-top 3rem
