.contact
  &__title
    margin 5rem 0
    h2
      font-size 2rem
      font-weight 500
      text-align left
      line-height 1.5
    .query__btn
      outline none
      color black
      background white
      border 1px black solid
      border-radius 5px
      padding 8px 6px
      margin 2rem 0
      font-size 1.2rem
      text-align center
      text-transform uppercase
      letter-spacing 1px
      transition all .5s ease
      cursor pointer
      &:hover
        background $orange
        color white
        border-color white
  &__region
    margin 5rem 0
    & > *
      display grid
      grid-template-columns 1fr 3fr
      & > h2
        grid-column 1 / -1
        text-align left
        color $orange
        font-weight 500
    & > *:not(:last-child)
      border-bottom 1px solid #b9b6b6
    &__cities
      grid-column-start 2;
      display grid
      grid-template-columns 1fr 1fr
      grid-gap 5rem
    &__city
      text-align center
      h2
        font-size 1.8rem
        font-weight 500
    &__person
      font-weight 500
      h3
        font-weight 500
        font-style italic
      a
        font-size 1.5rem
        // text-decoration underline dashed $orange
        text-decoration-color $orange
      span
        font-style italic

@media (max-width: 800px)
  .contact
    &__region
      &__cities
        grid-column 1 / -1
        grid-template-columns 1fr
