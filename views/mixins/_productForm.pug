mixin productForm(product = {})
  form(action="/addProduct" method="POST")
    label(for="type") Type:
    - const choices = ['LED Corn Light', 'LED Garden Light', 'LED Street Light']
    .types
      each choice in choices
        .type
          input(type="checkbox" id=choice value=choice name="type")
          label(for=choice) #{choice}
    label(for="name") Name:
    input#name(type="text" name="name")
    //- label(for="description") Description
    //- textarea#description(type="text" name="description")
    label(for="model") Model Number:
    input#model(type="text" name="model")
    label(for="power") Power:
    input#power(type="text" name="power")
    label(for="base") Base Type:
    input#base(type="text" name="base")
    input.button(type="submit" value="Save")
