mixin projectCard(project = {})
  .project
    .project__image
      image(src=`/uploads/${project.photo[0]}`)
    .project__text
      .project__text__heading
        h2= project.name
        .project__edit
          a(href=`/project/${project._id}/edit`)
            != h.icon('pencil')
      .project__text__details
